<?xml version="1.0" encoding="utf-8"?>
<xingstarx.com.dragframelayout.view.DragFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xingstarx.com.dragframelayout.MainActivity">

    <LinearLayout
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@android:color/background_dark"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/msg_container"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:background="@android:color/holo_red_dark"
        android:layout_height="match_parent"/>

</xingstarx.com.dragframelayout.view.DragFrameLayout>
